block header
    = t('views.title.editStatus')

block content
    +formFor()(action=route('status', { id: status.id }) method='post')
        +input(status, 'name', errors)(type="text")
        input(name='_method' type='hidden' value='patch')
        input.btn.btn-primary(type='submit' value=t('views.manage.edit'))

